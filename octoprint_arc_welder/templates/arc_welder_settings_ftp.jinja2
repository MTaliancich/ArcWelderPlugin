<script type="text/html" id="arc_welder_settings_ftp">
    <form class="form-horizontal" onsubmit="return false;">
        <fieldset>
            <legend>{{ _('FTP settings') }}</legend>
            <div style="clear:both">
                 <small>{{ _('FTP settings for upload gcode files') }}</small>
            </div>
            <div class="control-group">
                 <label class="control-label">{{ _('Host') }}</label>
                 <div class="controls">
                     <input type="text" class="input-block-level"
                            data-bind="value: plugin_settings().ftp.host"/>
                 </div>
            </div>
            <!--div class="control-group">
                <label class="control-label">{{ _('Port') }}</label>
                <div class="controls">
                    <input type="text" class="input-block-level"
                           data-bind="value: plugin_settings().ftp.port"/>
                </div>
            </div-->
            <div class="control-group">
                <label class="control-label">{{ _('User') }}</label>
                <div class="controls">
                    <input type="text" class="input-block-level"
                           data-bind="value: plugin_settings().ftp.user"/>
                </div>
            </div>
            <div class="control-group">
                <label class="control-label">{{ _('Password') }}</label>
                <div class="controls">
                    <input type="password" class="input-block-level"
                           data-bind="value: plugin_settings().ftp.password"/>
                </div>
            </div>
            <div class="control-group">
                <label class="control-label">{{ _('Gcode files Path') }}</label>
                <div class="controls">
                    <input type="text" class="input-block-level"
                           data-bind="value: plugin_settings().ftp.gcode_dir_path"/>
                </div>
            </div>
            <div class="control-group">
                <label class="control-label">{{ _('Picture files Path') }}</label>
                <div class="controls">
                    <input type="text" class="input-block-level"
                           data-bind="value: plugin_settings().ftp.picture_dir_path"/>
                </div>
            </div>
        </fieldset>
    </form>
</script>
