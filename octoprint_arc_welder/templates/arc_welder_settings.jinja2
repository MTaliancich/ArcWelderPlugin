<div id="arc_welder_settings" class="arc-welder">
    <h4>Anti Stutter Plugin Settings</h4>
    <div id="arc_welder_settings_nav" class="row-fluid">
        <div class="span12">
            <ul class="nav nav-pills">
                <li class="dropdown pull-right tabdrop hide">
                    <a class="dropdown-toggle" data-toggle="dropdown">
                        <i class="icon-align-justify"></i>
                        <b class="caret"></b>
                    </a>
                    <ul class="dropdown-menu"></ul>
                </li>
                <li class="active">
                    <a href="#arc_welder_settings_tab" data-toggle="tab" data-settings-tab="settings">Settings</a>
                </li>
                <li >
                    <a href="#arc_welder_discord_tab" data-toggle="tab" data-settings-tab="settings">Discord</a>
                </li>
                <li >
                    <a href="#arc_welder_ftp_tab" data-toggle="tab" data-settings-tab="settings">FTP</a>
                </li>
                <li>
                    <a href="#arc_welder_about_tab" data-toggle="tab" data-settings-tab="about">About</a>
                </li>
            </ul>
            <div class="tab-content short-rows">
                <div id="arc_welder_settings_tab" class="tab-pane active" data-bind="template:'arc_welder_settings_main'">
                    <div data-bind="template:'arc_welder_settings_main'"></div>
                </div>
                <div id="arc_welder_discord_tab"  class="tab-pane"        data-bind="template:'arc_welder_settings_discord'">
                    <div data-bind="template:'arc_welder_settings_discord'"></div>
                </div>
                <div id="arc_welder_ftp_tab"      class="tab-pane"        data-bind="template:'arc_welder_settings_ftp'">
                    <div data-bind="template:'arc_welder_settings_ftp'"></div>
                </div>
                <div id="arc_welder_about_tab"    class="tab-pane"        data-bind="template:'arc_welder_settings_about'">
                    <div data-bind="template:'arc_welder_settings_about'"></div>
                </div>
            </div>
        </div>
        <div class="row-fluid">
            <div class="span12">
                <p>
                    <span class="label label-important">USE AT YOUR OWN RISK</span> Arc Welder is still in development
                    and may contain errors that could affect your prints. Please be safe and don't leave your printer
                    unattended!
                </p>
            </div>
        </div>
    </div>
</div>
